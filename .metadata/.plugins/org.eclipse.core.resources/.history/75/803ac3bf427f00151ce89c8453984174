package usuarios;
//import java.util.Vector;

import java.io.BufferedReader;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;

public class GestorPerUsr {
	
	/*Constructora*/
	public GestorPerUsr() {

	}
	
	//Afegir un usuari
	public boolean afegirUsuari(UsuarioDom u){
		boolean afegit=false;
		try{
			File fichero = new File("usuaris/"+u.getUser()+"txt");
			if (fichero.exists()){
				afegit=true;
				fichero.createNewFile();
				FileWriter esc =new FileWriter("usuaris/"+u.getUser()+"txt",true);
				BufferedWriter bw = new BufferedWriter(esc); 
				bw.write(u.getPassword());
				bw.close();
				esc.close();
			}
			else afegit=false;
		}catch(IOException ex){
			// S'ha de fer encara
		}
		return afegit;
	}
	
	//Comprovar si existeix un usuari
	public void isUser2(ArrayList noms, ArrayList pass, boolean cas){
		try{
			FileReader fr = new FileReader("Usuarios.txt");
			BufferedReader bf = new BufferedReader(fr);
			String nom;
	        while((nom=bf.readLine())!=null){
	        	noms.add(nom);
	        	if (!cas)pass.add(bf.readLine());
	        	else bf.readLine();
	        }
	        bf.close();
	        fr.close();
		}catch (IOException ex){
			// S'ha de fer encara
		}
	}
	
	//Escrivim tots els usuaris
	public void escriu(ArrayList noms, ArrayList pass){
		try{
			FileWriter esc =new FileWriter("Usuarios.txt",false);
			BufferedWriter bw = new BufferedWriter(esc); 
			int i=0;
			String u;
			String p;
			while(i<noms.size()){
				u=(String) noms.get(i);
				bw.write(u);
				bw.newLine();
				p=(String) pass.get(i);
				bw.write(p);
				bw.newLine();
				++i;
			}
			bw.close();
			esc.close();
		}catch(IOException ex){
			// S'ha de fer encara
		}
	}
}
