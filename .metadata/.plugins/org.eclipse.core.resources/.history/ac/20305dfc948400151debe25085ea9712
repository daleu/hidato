import java.util.ArrayList;
import java.util.ListIterator;

public class Ranking {
	
	private static final int DIF_EAS = 1;
	private static final int DIF_NOR = 2;
	private static final int DIF_HAR = 3;
	
	private ArrayList<PairIntString> facil;
	private ArrayList<PairIntString> normal;
	private ArrayList<PairIntString> dificil;
	//private ControladorDomini cd = new ControladorDomini();
	
	/*Contructores*/
	
	public Ranking(){
		this.facil = new ArrayList<PairIntString>();
		this.normal = new ArrayList<PairIntString>();
		this.dificil = new ArrayList<PairIntString>();
		
		//this.cd = new ControladorDomini();
	}
	
	/*Consultores*/
	
	//dificultat=1 -> easy, dificultat=2 -> normal, dificultat=3 -> dificil
	public ArrayList<PairIntString> getRank(int dificultat){
		
		switch (dificultat) {
		case DIF_EAS:
			return (ArrayList<PairIntString>) facil.clone();
		case DIF_NOR:
			return (ArrayList<PairIntString>) normal.clone();
		case DIF_HAR:
			return (ArrayList<PairIntString>) dificil.clone();
		}
		return null;
	}
	
	//dificultat=1 -> easy, dificultat=2 -> normal, dificultat=3 -> dificil
	public ArrayList<Integer> getPos(String user, int dificultat) {
		ArrayList<Integer> ap = new ArrayList<Integer>();
		ListIterator<PairIntString> it;
		PairIntString pis;
		
		switch (dificultat) {
		case DIF_EAS:
			it = facil.listIterator();
			int i = 0;
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(user)) ap.add(i);
				++i;
			}
		case DIF_NOR:
			it = normal.listIterator();
			int i = 0;
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(user)) ap.add(i);
				++i;
			}
		case DIF_HAR:
			it = dificil.listIterator();
			int i = 0;
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(user)) ap.add(i);
				++i;
			}
		}
		return ap;
	}
	
	//dificultat=1 -> easy, dificultat=2 -> normal, dificultat=3 -> dificil
	public ArrayList<Integer> getScore(String user, int dificultat) {
		ArrayList<Integer> ap = new ArrayList<Integer>();
		ListIterator<PairIntString> it;
		PairIntString pis;
		
		switch (dificultat) {
		case DIF_EAS:
			it = facil.listIterator();
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(user)) {
					ap.add(pis.getFirst());
				}
			}
		case DIF_NOR:
			it = normal.listIterator();
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(user)) {
					ap.add(pis.getFirst());
				}
			}
		case DIF_HAR:
			it = dificil.listIterator();
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(user)) {
					ap.add(pis.getFirst());
				}
			}
		}
		return ap;
	}
	
	/*Modificadores*/
	
	public void addNewRanking(int dificultat, String user, int score) {
		ListIterator<PairIntString> it;
		PairIntString pis;
		
		switch (dificultat) {
		case DIF_EAS:
			boolean inserted = false;
			it = facil.listIterator();
			while (it.hasNext() && !inserted) {
				pis = it.next();
				if (pis.getFirst() < score) facil.add(it); // No sé si sería mejor añadir un contador para el índice en vez de usar el iterador
			}
		case DIF_NOR:
			boolean inserted = false;
			it = normal.listIterator();
			while (it.hasNext() && !inserted) {
				pis = it.next();
				if (pis.getFirst() < score) normal.add(it); // No sé si sería mejor añadir un contador para el índice en vez de usar el iterador
			}
		case DIF_HAR:
			boolean inserted = false;
			it = dificil.listIterator();
			while (it.hasNext() && !inserted) {
				pis = it.next();
				if (pis.getFirst() < score) dificil.add(it); // No sé si sería mejor añadir un contador para el índice en vez de usar el iterador
			}
	}
	
	public void deleteUserRanking(String user) {
		ListIterator<PairIntString> it;
		PairIntString pis;
		
		switch (dificultat) {
		case DIF_EAS:
			it = facil.listIterator();
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(user)) facil.remove(it); // No sé si sería mejor añadir un contador para el índice en vez de usar el iterador
			}
		case DIF_NOR:
			it = facil.listIterator();
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(user)) normal.remove(it); // No sé si sería mejor añadir un contador para el índice en vez de usar el iterador
			}
		case DIF_HAR:
			it = facil.listIterator();
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(user)) dificil.remove(it); // No sé si sería mejor añadir un contador para el índice en vez de usar el iterador
			}
		}
	}
	
	public void modifyUsername(String userActual, String userAnterior) {
		ListIterator<PairIntString> it;
		PairIntString pis;
		switch (dificultat) {
		case DIF_EAS:
			it = facil.listIterator();
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(userAnterior)){
					pis.setSecond(userActual);
			}
		case DIF_NOR:
			it = normal.listIterator();
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(userAnterior)){
					pis.setSecond(userActual);
			}
		case DIF_HAR:
			it = dificl.listIterator();
			while (it.hasNext()) {
				pis = it.next();
				if (pis.getSecond().equals(userAnterior)){
					pis.setSecond(userActual);
			}
		}
	}
}