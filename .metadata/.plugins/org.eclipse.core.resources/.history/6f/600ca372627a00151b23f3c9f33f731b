import java.util.Scanner;

public class Main {
	
	public static final int OP_ENTER = 1;
	public static final int OP_EXIT = 2;
	
	private static CtrUser cu		= new CtrUser();
	private static CtrHidato ch	= new CtrHidato();
	private static CtrRanquing cr	= new CtrRanquing();
	
	public static void main(String[] args) {
		Scanner input 	= new Scanner(System.in);
		boolean b = true;
		int op = 0;
		
		while(b) {
			System.out.println("\nOpciones:");
			System.out.println(OP_ENTER + ". Entrar");
			System.out.println(OP_EXIT + ". Salir");
			
			if (!input.hasNextInt()) {
				input.next();
				op = 0;
			}
			else op = input.nextInt();
			
			switch (op) {
			case OP_ENTER:
				System.out.println("Bienvenido");
				cu.enter();
				break;
			
			case OP_EXIT:
				System.out.println("Cerrando...");
				input.close();
				b = false;
				break;
			
			default:
				System.out.println("Opcion incorrecta");
				break;
			}

		}
	}

}
