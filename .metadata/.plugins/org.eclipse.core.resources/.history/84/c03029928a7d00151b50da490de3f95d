	public GestorPerUsr() {

	}
	
	public void addUser2(UsuarioDom u) {
		try{
			FileWriter esc =new FileWriter("Usuarios.txt");
			BufferedWriter bw = new BufferedWriter(esc); 
			bw.write(u.getUser());
			bw.newLine();
			bw.write(u.getPassword());
			bw.newLine();
			bw.close();
			esc.close();
		}catch(IOException ex){
			
		}
	}
	
	public boolean isUser2(UsuarioDom u){
